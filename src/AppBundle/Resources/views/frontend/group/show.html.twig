{% extends 'base.html.twig' %}

{% block body %}
    <ul>
        <li><b>Назва:</b> {{ group.name }}</li>
        <li><b>Опис</b>: {{ group.description }}</li>
        <li><b>Рік створення:</b> {{ group.foundedAt|date("Y") }}</li>
        <li>
            <b>Жанри:</b>
            <ul>
                {% for genre in genres %}
                    <li><a href="{{ path('genre_group',{ 'slug':genre.slug })}}">{{ genre.name }}</a></li>
                {% endfor %}
            </ul>
        </li>
    </ul>
    <a href="{{ path('group_event',{ 'slug': group.slug }) }}">Майбутні концерти...</a>
{% endblock %}